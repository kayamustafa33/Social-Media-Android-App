<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/app_color"
    tools:context=".Fragments.SocialMediaProfileFragment">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/socialMediaProfileImage"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:padding="10dp"
        android:src="@drawable/profile"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:id="@+id/socialMediaProfileUserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginBottom="7dp"
        android:textSize="14sp"
        android:textAlignment="center"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/socialMediaProfileEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:textAlignment="center"
        android:textSize="14sp"
        android:textColor="@color/white"/>


    <com.google.android.material.tabs.TabLayout
        android:id="@+id/socialMediaProfileTabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/app_color"
        app:tabIconTint="@color/white"
        app:tabIndicatorColor="#FFC107">

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/ic_baseline_image_24"/>

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/bookmark"/>
    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/SocialMediaViewPager"
        android:background="@color/app_color"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</LinearLayout>