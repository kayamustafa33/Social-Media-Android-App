<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_color"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".Fragments.SocialMediaShareFragment">

    <ImageView
        android:id="@+id/choose_image"
        android:layout_width="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="200dp"
        android:layout_margin="20dp"
        android:src="@drawable/add_image"/>

    <TextView
        android:id="@+id/didNotSelectPictureText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/you_did_not_select_a_picture"
        android:textColor="#F44336"
        android:textAlignment="center"
        android:layout_margin="15dp"/>



        <EditText
            android:id="@+id/userShareComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/comment"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:inputType="text"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:maxLength="100"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:drawableStart="@drawable/ic_baseline_comment_24"
            android:drawablePadding="12dp"
            android:background="@drawable/signin_bg"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/shareBtnClicked"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/share"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="70dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/signin_bg"
        android:backgroundTint="#27AE60"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textSize="18sp"/>

</LinearLayout>